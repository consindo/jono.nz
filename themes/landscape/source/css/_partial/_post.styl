.article-type-post {
	max-width: 800px;
	margin: 0 auto;
	padding: 100px 40px 75px;
	
	@media(max-width: 550px) {
		padding: 80px 25px 50px;
	}

	.article-header {
		h1 {
			font-size: 3em;
			letter-spacing: -2px;
			display: inline-block;
			line-height: 1.1;
		}
	}
	.article-entry {
		font-size: 20px;
		line-height: 1.58;
		color: #333;
		padding-top: 0;
		
		h2, h3 {
			margin: 0.75em 0 0.25em;
			letter-spacing: -0.5px;
		}
		
		ul {
			margin: 1em 0 1.5em;
			padding-left: 1em;
		}
		code {
			font-size: 0.9em;
			background: #f6f6f6;
			padding: 2px 5px;
			border: 1px solid rgba(0,0,0,0.1);
		}

		figure {
			margin: 0.25em 0;
			background: #f5f5f5;
			
			pre {
				margin: 0.25em 0;
				white-space: pre-wrap;
			}

			.code {
				font-size: 70%;
			}
			
			.gutter {
				font-size: 70%;
				font-weight: bold;
				padding: 0 10px;
			}
		}
		
		img {
			width: 100%;
		}
		
		a {
			color: #0084ff;
			text-decoration: none;
			
			&:hover {
				text-decoration: underline;
			}
		}
		.article-meta {
			font-size: 14px;
			color: #999;
		}
	}
	@media(max-width: 600px) {
		.article-header h1 {
			font-size: 2.5em;
			letter-spacing: -1px;
		}
		.article-entry {
			font-size: 18px;
		}
	}
	@media(max-width: 450px) {
		.article-header h1 {
			font-size: 2em;
			letter-spacing: -0.5px;
		}
		.article-entry {
			font-size: 16px;
		}
	}
	#article-nav a {
		color: #000;
		text-decoration: none;
		font-size: 18px;
		transition: 150ms ease all;
		font-weight: bold;
		
		&:hover {
			background: #000;
			color: #fff;
		}
	}
}