.projects {
	padding: 25px 25px 5px;
	font-size: 0;
	background: #000;
	max-width: 1600px;
	margin: 0 auto;
	
	img {
		width: 100%;
	}
	
	.col {
		vertical-align: top;
		width: 50%;
		display: inline-block;
	}
	
	.project {
		background: #111;
		border: 2px solid #333;
		margin: 15px 15px 30px;
		color: #fff;
		
		h2 {
			margin: 0;
			font-size: 15px;
			text-transform: lowercase;
			line-height: 48px;
			padding: 0 9px 0 20px;
			letter-spacing: -0.5;
		}
		p {
			font-size: 14px;
			margin-bottom: 0;
			font-weight: 600;
			padding: 10px 15px;
		}
		
		a {
			font-size: 14px;
			text-decoration: none;
			vertical-align: top;
			padding: 5px 30px;
			border: 2px solid #fff;
			color: #fff;
			font-weight: bold;
			letter-spacing: 1px;
			text-transform: uppercase;
			border-radius: 25px;
			display: inline-block;
			transition: 300ms ease all;
			float: right;
			line-height: 1;
			margin: 10px 0;

			&:hover {
				background: #fff;
				color: #000;
			}
		}
	}
	
	@media(max-width: 900px) {
		.col {
			width: 100%;
		}
	}
	@media(max-width: 500px) {
		padding: 15px 0 5px;
		
		.project {
			margin-bottom: 15px;
		}
	}
	@media(max-width: 450px) {
		.project {
			h2 {
				padding: 0 20px;
				text-align: center;
			}
			a {
				margin: 0px 0 20px;
				width: 100%;
				box-sizing: border-box;
				text-align: center;
			}
		}
	}
}