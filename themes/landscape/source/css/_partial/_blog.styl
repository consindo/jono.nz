.banner.blog {
	border-top: 48px solid #000;
	text-align: center;
	padding: 60px 0;
	
	h1 {
		font-size: 3em;
		letter-spacing: -1px;
		padding: 0 1px;
		line-height: 1.5;
		display: inline-block;
		margin: 0 auto;
	}
	
	@media (max-width: 500px) {
		border-top: 40px solid #000;
		padding: 40px 0;
		h1 {
			letter-spacing: -3px;
			font-size: 4em;
		}
	}
}

.archives-wrap {
	padding: 0 25px;
}

.archives {
	text-align: center;
}

.archive-year-wrap {
	text-align: center;
	margin-bottom: 1.5em;
	
	a {
		color: #999;
		font-weight: bold;
		font-size: 1.3em;
		text-decoration: none;
	}
}

.archive-article-inner {
	time {
		font-size: 0.9em;
		color: #888;
	}
	h1 {
		max-width: 600px;
		margin: 0 auto 1.5em;
		line-height: 1.33;
	}
	h1 a {
		
		color: #000;
		font-size: 1.2em;
		text-decoration: none;
		transition: 150ms ease all;

		&:hover {
			background: #000;
			color: #fff;
		}
		
		@media (max-width: 500px) {
			font-size: 1em;
		}
	}
}
