.banner.blog {
	padding: 5rem 1.5rem 1rem;
	max-width: $max-width;
	margin: 0 auto;
	
	h1 {
		font-size: 3em;
		letter-spacing: -1px;
		padding: 0 1px;
		line-height: 1.5;
		display: inline-block;
		margin: 0 auto;
	}
	
	p {
		font-family: $serif;
		font-size: 1.25rem;
	}
}

.archives-wrap {
	padding: 0 1.5rem;
	max-width: $max-width;
	margin: 0 auto;
}

#page-nav {
	padding: 1.5rem;
	max-width: $max-width;
	margin: 0 auto;
	font-size: 1.25rem;
	
	a {
		color: inherit;
		text-decoration: none;
		border-bottom: 1px dotted #000;
	}
	
	.page-number {
		margin-right: 0.5rem;
		display: none;
	}
	.extend, .current {
		font-weight: bold;
	}
}

.archive-year-wrap {
	margin: 3rem 0 1rem;
	
	a {
		color: #000;
		font-weight: bold;
		font-size: 1.3em;
		text-decoration: none;
	}
}

.archive-article-inner {
	time {
		font-size: 1rem;
		color: #888;
		font-family: $serif;
	}
	h1 {
		margin: 0 auto 1.5rem;
		line-height: 1.33;
	}
	h1 a {
		
		color: #000;
		font-size: 1.75rem;
		text-decoration: none;
		transition: 150ms ease all;

		&:hover {
			opacity: 0.65;
		}
		
		@media (max-width: 500px) {
			font-size: 1em;
		}
	}
}
