$blue = #0084ff;

.home {
	background-color: $blue;
	background-image: url(images/home.jpg);
	height: 100vh;
	background-size: cover;
	color: #fff;
	text-align: center;

	h2 {
	font-size: 5em;
	margin: 0;
	padding-top: 35vh;

	}
	h3 {
		max-width: 700px;
		margin: 0 auto;
		font-size: 1.4em;
	}
}

.big-button {
	font-size: 16px;
	text-decoration: none;
	padding: 10px 50px;
	margin-top: 25px;
	border: 2px solid #fff;
	color: #fff;
	font-weight: bold;
	letter-spacing: 2px;
	text-transform: uppercase;
	border-radius: 25px;
	display: inline-block;
	transition: 300ms ease all;

	&:hover {
		background: #fff;
		color: #222;
	}

}
