$header-size = 60px;

nav.sidebar {
	// background: darken(#2f3d4c, 30%);
	width: 100%;
	height: $header-size;
	transition: 500ms ease all;
	transform-origin: left center;
	color: lighten(#8793a0, 10%);
	position: fixed;
	z-index: 10;
	padding: 0 25px;
	display: flex;
	box-sizing: border-box;
	
	h1 {
		margin: 0;
		flex: 1;
	}
	
	h1 a {
		text-transform: lowercase;
		letter-spacing: -1px;
		display: block;
		font-size: 24px;
		text-decoration: none;
		font-weight: normal;
		line-height: $header-size;
		color: #fff;

		&:hover {
			color: #fff;
		}
	}
	ul {
		list-style-type: none;
		padding: 0;
		margin: 0;
	}
	li {
		display: inline-block;
		
		&:last-child a {
			padding: 0 0 0 10px;
		}
	}
	li a {
		text-decoration: none;
		display: block;
		color: #fff;
		padding: 0 10px;
		line-height: $header-size;
		font-size: 14px;

		img {
			padding: 0;
			margin-right: 8px;
		}
	}
}