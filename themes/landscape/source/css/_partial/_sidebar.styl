$header-size = 60px;

@keyframes show {
	0% {
		opacity: 0;
	}
	100% {
		opacity: 1;
	}
}

nav.sidebar {
	// background: darken(#2f3d4c, 30%);
	width: 100%;
	height: $header-size;
	transition: 500ms ease all;
	transform-origin: left center;
	color: lighten(#8793a0, 10%);
	position: fixed;
	z-index: 10;
	padding: 0 25px;
	display: flex;
	box-sizing: border-box;
	background: #000;
	
	h1 {
		margin: 0;
		flex: 1;
	}
	
	h1 a {
		text-transform: lowercase;
		letter-spacing: -1px;
		display: block;
		font-size: 24px;
		text-decoration: none;
		font-weight: normal;
		line-height: $header-size;
		color: #fff;

		&:hover {
			color: #fff;
		}
	}
	ul {
		list-style-type: none;
		padding: 0;
		margin: 0;
	}
	li {
		display: inline-block;
		
		&:last-child a {
			padding: 0 0 0 10px;
		}
	}

	li a {
		text-decoration: none;
		display: block;
		color: #fff;
		padding: 0 10px;
		line-height: $header-size;
		font-size: 14px;

		img {
			padding: 0;
			margin-right: 8px;
		}
	}
	
	#expand {
		display: none;
		background-color: transparent;
		background-image: url('images/icons/menu.png');
		background-size: 11px 11px;
		background-repeat: no-repeat;
		background-position: 14px 55%;
		padding-left: 30px;
		padding-right: 14px;
		margin-right: -14px;
		border: 0;
		outline: 0;
		color: #fff;
	}
	
	@media(max-width: 500px) {
		
		#expand {
			display: inline-block;
		}
		height: 48px;
		
		h1 a {
			line-height: 48px;
		}
		ul {
			position: absolute;
			display: none;
			top: 48px;
			left: 0;
			right: 0;
			background: #222;

			&.visible {
				display: block;
				animation: show 300ms ease 1;

				&+ #expand {
					background-color: #222;
				}
			}
		}
		li {
			display: block;
			padding: 0 0.67em;
			
			&:hover {
				background: #000;
			}

			a {
				line-height: 48px;
			}
		}
	}
}