nav {
	background: darken(#2f3d4c, 5%);
	width: 150px;
	height: 100%;
	transition: 500ms ease all;
	transform-origin: left center;
	color: lighten(#8793a0, 10%);
	position: fixed;
	
	h1 {
		margin: 0;
	}
	
	h1 a {
		display: block;
		font-size: 22px;
		text-decoration: none;
		font-weight: normal;
		padding: 10px 0 0 ;
		text-align: center;
		color: lighten(#8793a0, 15%);
		letter-spacing: -0.5px;

		&:hover {
			color: lighten(#8793a0, 80%);
		}
	}
	img {
		box-sizing: border-box;
		padding: 15px 10px 0;
	}
	ul {
		list-style-type: none;
		padding: 0;
	}
	li a {	
		background: rgba(0,0,0,0.2);
		text-decoration: none;
		display: block;
		color: lighten(#8793a0, 25%);
		padding: 5px 10px;
		line-height: 32px;
		font-size: 14px;

		&:hover {
			background: rgba(0,0,0,0.35);
		}

		img {
			width: 12px;
			padding: 0;
			margin-right: 10px;
		}
	}
	footer {
		font-size: 11px;
		padding: 0 10px;
		color: #8793a0;

		img {
			margin: 5px 0;
			padding: 0;
			width: 80px;
		}
	}
}