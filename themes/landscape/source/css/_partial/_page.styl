html, body {
	height: 100%;
	font-family: 'Segoe UI', sans-serif;
	padding: 0;
	margin: 0;
}

#main {
	margin-left: 150px;
}

$height = 120px;

.banner {
	height: $height;
	background: #e74c3c;
	box-sizing: border-box;
	position: relative;
	text-align: right;
	// transform: translate(-100vh) rotate(-90deg);
	transform-origin: top right;
	width: 100%;
	
	h1 {
		// color: #333;
		color: #fff;
		font-size: 6em;
		letter-spacing: -4px;
		margin: 0;
		padding: 0 25px;
		line-height: $height - 20px;
		display: inline-block;
	}
}

.article-header {
	height: 40vh;
	background-color: #2b5794;
	background-image: url('images/projects.jpg');
	background-size: cover;
	background-position: 50% 100%;
	padding: 50px;
	text-align: center;
		color: #fff;
	
	h1 {
		font-size: 6em;
		letter-spacing: -3px;
		margin: 20vh 0 0;
		padding: 0 25px;
		display: inline-block;
	}
	h2 {
		font-weight: normal;
		font-size: 1.3em;
		margin: 0;
	}
}

img {
	height: auto;
	width: 100%;
}

p {
	padding: 0;
	margin: 0 0 1.5em;
}

.article-meta .page {
	color: #999;
	margin-bottom: 0;
	padding: 0 40px 15px;
	font-size: 13px;
	background: #000;
}