$ideal-width = 1600px;
$sans = 'Barlow', 'Segoe UI', -apple-system, BlinkMacSystemFont, 'Roboto', sans-serif;
$serif = "EB Garamond", "Georgia", serif;

html, body {
	font-family: $sans;
	padding: 0;
	margin: 0;
}

@font-face {
  font-family: emoji;

  src: local('Apple Color Emoji'),
       local('Android Emoji'),
       local('Segoe UI Emoji'),
       local(EmojiSymbols),
       local(Symbola);

/* Emoji unicode blocks */
  unicode-range: U+1F300-1F5FF, U+1F600-1F64F, U+1F680-1F6FF, U+2600-26FF;
}

.emoji {
	font-family: "Emoji";
}

.article-entry {
	padding-top: 1rem;
	
	@media(max-width: 500px) {
	  padding-top: 48px;
	}
}

img {
	height: auto;
}

p {
	padding: 0;
	margin: 0 0 1.5em;
}

.article-meta {
	margin: 0 0 1rem;
}
footer {
	padding: 1.25rem 0;
	margin: 4rem 1.5rem 0.75rem;
	font-weight: bold;
	border-top: 1px dotted #888;
	
	.email {
		font-size: 1.5rem;
	}
	
	ul {
		list-style-type: none;
		margin: 0;
		padding: 1rem 0;
		display: flex;
		font-size: 1rem;
	}
	
	@media (min-width: 600px) {
		.email {
			font-size: 1.75rem;
		}
		ul {
			font-size: 1.25rem;
		}
	}

	li {
		padding-right: 1rem;
	}
	

	a {
		color: inherit;
		text-decoration: none;
		&:hover {
			opacity: 0.65;
		}
	}
	
	.copyright {
		flex: 1;
		text-align: right;
		display: none;
		
		@media (min-width: 350px) {
			display: block;
		}
	}
}