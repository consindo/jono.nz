$ideal-width = 1600px;
html, body {
	height: 100%;
	font-family: 'Segoe UI', sans-serif;
	padding: 0;
	margin: 0;
}

#main {
	// margin-left: 150px;
}

.article-type-page .article-header {
	text-align: center;
	background: url('images/projects.jpg') 50% 100% no-repeat;
	background-size: cover;
	height: 250px;
	padding-top: 300px;
		
	h1 {
		font-size: 6em;
		letter-spacing: -3px;
		margin: 25px 0 0;
		display: inline-block;
		padding: 0 1px;
		line-height: 1.75;
		// background: #000;
		color: #fff;
	}
}

.article-entry {
	padding-top: 60px;
}

img {
	height: auto;
}

p {
	padding: 0;
	margin: 0 0 1.5em;
}

$footer-height = 32px;
.article-meta {
	float: right;
	margin: 0;
	p  {
		margin: 0;
		line-height: $footer-height;
	}
}
footer {
	height: $footer-height;
	color: #999;
	font-size: 12px;
	line-height: $footer-height;
	padding: 0 10px 15px;
	.wrapper {
		max-width: $ideal-width - 30;
		margin: 0 auto;
		padding: 0 30px;
	}
	.copyright {
		display: inline-block;
	}
	a {
		color: inherit;
		text-decoration: none;
		&:hover {
			text-decoration: underline;
		}
	}
}