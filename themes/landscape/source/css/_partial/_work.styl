h1.work {
	display: inline-block;
	height: 65px;
	line-height: 50px;
	padding-top: 15px;
	// margin: 25px;
	margin: 0 25px;
	border-bottom: 4px solid #000;
	box-sizing: border-box;
	letter-spacing: -1px;
	// background: #000;
	// color: #fff;
}

.orbitsound {
	height: calc(70vh - 40px);
	background: url('images/orbitsound.jpg') 50% 50%;
	background-size: 100%;
	background-repeat: no-repeat;
	position: relative;
	
	div {
		position: absolute;
		left: 50%;
		top: 30%;
	}
	
	img {
		width: 420px;
		display: block;
		margin-left: -30px;
	}
	
	.big-button {
		margin-top: 0;
		border-color: #000;
		color: #000;
		
		&:hover {
			background: #000;
			color: #fff;
		}
	}
}

.otherwork {
	background: #000;
	font-size: 0;
	
	.dymajo, .hireme {
		width: 50%;
		display: inline-block;
		font-size: 16px;
		height: calc(30vh - 25px);
		text-align: center;
		vertical-align: top;
	}
	
	.dymajo {
		background: orange;
		background: url('images/dymajo.jpg') 50% 50%;
		background-size: cover;
		color: #fff;
		
		h3 {
			font-weight: normal;
			font-size: 16px;
			max-width: 200px;
			margin: 15px auto 15px;
		}
		
		img {
			margin-top: 10%;
			width: 150px;
		}
	}
		
	a {
		font-size: 14px;
		text-decoration: none;
		vertical-align: top;
		padding: 5px 30px;
		border: 2px solid #fff;
		color: #fff;
		font-weight: bold;
		letter-spacing: 1px;
		text-transform: uppercase;
		border-radius: 25px;
		display: inline-block;
		transition: 300ms ease all;
		line-height: 1;
		
		&:hover {
			background: #fff;
			color: #000;
		}
	}
	
	h2 {
		margin-top: 15%;
		font-weight: 300;
	}
	
	.hireme {
		color: #fff;
		background: 
		linear-gradient(63deg, #000 23%, transparent 23%) 7px 0, 
		linear-gradient(63deg, transparent 74%, #000 78%), 
		linear-gradient(63deg, transparent 34%, #000 38%, #000 58%, transparent 62%), 
		#1a1a1a;
		background-size: 16px 48px;
	}
}